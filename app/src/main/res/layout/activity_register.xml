<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#efefef"
tools:context=".RegisterActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="#FILLER LOGO#"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"/>

<LinearLayout
    android:paddingTop="20dp"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="#000000"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/etRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email address"
            android:textSize="16dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="12dp"
            android:textColor="#1e1e1e"
            android:layout_marginBottom="15dp"
            android:background="@drawable/layout_bg_entryfields"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:textColor="#000000"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/etRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter at least 6 characters"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:paddingHorizontal="15dp"
            android:paddingVertical="12dp"
            android:textColor="#1e1e1e"
            android:layout_marginBottom="15dp"
            android:background="@drawable/layout_bg_entryfields"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="#000000"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/etRegisterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your first name"
            android:textSize="16dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="12dp"
            android:textColor="#1e1e1e"
            android:layout_marginBottom="15dp"
            android:background="@drawable/layout_bg_entryfields"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number: "
            android:textColor="#000000"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/etRegisterPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="(___) ___ ____"
            android:textSize="16dp"
            android:inputType="number"
            android:paddingHorizontal="15dp"
            android:paddingVertical="12dp"
            android:textColor="#1e1e1e"
            android:layout_marginBottom="20dp"
            android:background="@drawable/layout_bg_entryfields"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio: "
            android:textColor="#000000"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/etRegisterBio"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Enter some info about yourself"
            android:textSize="16dp"
            android:textAlignment="center"
            android:inputType="number"
            android:paddingHorizontal="15dp"
            android:paddingVertical="12dp"
            android:textColor="#1e1e1e"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bio_wrapper"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:paddingHorizontal="30dp"
        android:text="Next"
        android:textSize="21dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="19dp"
        android:layout_marginHorizontal="110dp"
        android:textAlignment="center"
        android:background="@drawable/gradient_button_shape"/>

</LinearLayout>



</RelativeLayout>